<div class="tweet-list">
  <div class="tweet-content">
  <% @tweets.each do |tweet| %>
    <div class="tweet-image-area">
        <%= image_tag tweet.image.variant(resize: '500x500'), class: 'tweet-image' if tweet.image.attached? %>
    </div>
    <div class="tweets-nickname">投稿者：<%= tweet.user.nickname %></div>
    <%= link_to '編集', edit_tweet_path(tweet.id), class: "tweets-nickname" %>
    <%= link_to '削除', tweet_path(tweet.id), method: :delete, class: "tweets-nickname" %>
    <div>
      <div class="tweet-text">
        <%= tweet.text %>
      </div>
    </div>
  <% end %>
  </div>
</div>