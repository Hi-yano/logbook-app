<%= render "shared/header" %>
<div class="signup-main">
  <div class="login-group">
    <div class="login-center">
    <h1 class="devise-title">新規登録</h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="field">
          <%= f.label :nickname %> <em>(6文字以下)</em><br />
          <%= f.text_field :nickname, autofocus: true, maxlength: "6", class: "form-field" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-field" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以内)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-field" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class:"submit-send-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
